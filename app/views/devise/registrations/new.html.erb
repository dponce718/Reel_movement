<section>

  <div class="authform container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>


          <div class="form-group">
                    <%= f.text_field :name, class: 'form-control', placeholder: "Your Name" %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, placeholder: "Your Email", autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, placeholder: "Your Password (8 characters minimum", autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>      
</section>