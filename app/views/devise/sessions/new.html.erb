<section class= "row bg-light-gray">
<div class="col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-0 card card-user">
  
    
        <div class="content">
    
           
    
                
    
                 <%= image_tag "logo.png", class: "plain-logo center-block"   %> 
    
               
    
                  <h4 class="text-center title"> Log in  </h4> 
    
          
    
           <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Your Email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Your Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-info btn-fill btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


    
        </div>
        
    
    </div> <!-- end card -->

</section>    
    