    <section class="user-background" id= "assessment-img">

        <div class="container">
             <div class="row">

                <div  id= "pop-1" class="intro-text col-lg-8 video-container" data-toggle="popover" data-placement="top" title="Take your assessment" data-content="Lets get started. Follow along with us in the video. Check out the useful tips below before you get started. ">
              <%= raw @program.code_one %>
                </div>

                    <div class="intro-text col-lg-4  center-block">
                    <div class="card card-user" data-toggle="popover" data-placement="top" title="Assessment Form" data-content=" Grab a pen and paper and once your done with your assessment fill out the form below. Be honest with your answers">
                    <div class="content">

                  <%= image_tag "logo.png", class: "plain-logo center-block"   %> 
    
              

                        <%= form_for(:assessment, :url => {:action => 'create'}) do |f| %>

                            <div class="form-group"> 
                               
                                <%= f.text_field :rhr, autofocus: true, class: 'form-control', placeholder: "Resting Heart Rate"  %>
                            </div>

                             <div class="form-group"> 
                                 <%= f.text_field :push_ups, autofocus: true, class: 'form-control', placeholder: "Push ups"  %>
                             </div>
                             
                              <div class="form-group"> 
                              
                                <%= f.text_field :planks, autofocus: true, class: 'form-control', placeholder: "Planks" %>
                              </div>
                              
                              <div class="form-group"> 
                               
                                <%= f.text_field :wall_sits, autofocus: true, class: 'form-control', placeholder: "Wall sits" %>
                              </div>
                              
                               <div class="form-group"> 
                                
                                <%= f.text_field :hamstring, autofocus: true, class: 'form-control', placeholder: "Flexibility" %>
                               </div> 

                            <div class="actions">
                            <%= f.submit "Finish assessment", class: 'btn btn-info btn-fill btn-block' %>
                            </div>

                          </div>


                     <% end %>
                   
                    </div>    

                    </div>
                    
               
            </div>
            </div>
</section>

  <div class="container">
     <div class="row">
             
              <div class="col-md-6 col-md-offset-3">
                <h2 class="text-center"> Here are some helpful tips to guide you <h5>
              </div>
            
            </div>
   </div> <!-- end of container -->  
    

    <script type="text/javascript">

    $( document ).ready(function() {
    console.log( "ready!" );
    $('.content form').validate({
  rules : {
          'assessment[rhr]' : { required : true
                         }, //END OF USERNAME
              'assessment[push_ups]' : { required : true
                         },  // end of email
              'assessment[hamstring]' : { required : true
                         },  // end of password 
               'assessment[planks]' : { required : true
                         },  // end of password 
               'assessment[wall_sits]' : { required : true
                         },  // end of password           
          },//end of rules
    
});// end of validation

       // popovers
     $(function () 
      { $('#pop-1').popover('show');
     });



});


    </script>

                   
