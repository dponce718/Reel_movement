

<section class= "user-background"  id = "<%= current_user.program.style %>">
        <div class="container">

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading"> <%= raw current_user.program.title %> </h2>
                   
                </div>
            </div>
            
               
                <div id="welcome-pop" class="user-program video-container program-video"
                data-html="true" 
                data-toggle="popover"
                data-placement="top" 
                title="Welcome" 
                data-content="<div> <p>Allright, if its your first time here go ahead and take a tour. If not, skip the tour and lets get started </br> </p><div class='pull-right tour btn btn-primary btn-xs'> Take a tour</div>  <div class='pull-left close-btn btn btn-primary btn-xs'> Skip tour</div> </br> ">
                    
                     
             <%= raw current_user.program.code_one %> 
                                            
                </div>
            <div class="row">
        <div class=" col-md-6 col-md-offset-3">

        <ul id="program-list">
          
          <li> <a href="#program-one" class="open-popup-link btn btn-success btn-fill"> Core training </a> </li>

          <li  class="tour-pop"
                data-html="true" 
                data-toggle="popover"
                data-placement="top" 
                title="Workouts" 
                data-content="<div> <p> Every video attached to your program is here. Just click the button and your next workout will pop right up </p> </div> "> <a href="#program-two" class="open-popup-link btn btn-success btn-fill"> cardio training</a> </li>

          <li> <a href="#program-three" class="open-popup-link btn btn-success btn-fill">flexibility and mobility</a> </li>
         </ul>  
        </div>
        </div>
  </section>




  <section class="user-background bg-light-gray" id='user-cards'>
    <div class="container">
      <div class="row">
        <div class="col-md-4"> 
          <div class="card card-background tour-pop"
           data-html="true" 
                data-toggle="popover"
                data-placement="top" 
                title="Reel Movement Blog" 
