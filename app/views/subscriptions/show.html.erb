                data-toggle="popover"
                data-placement="top" 
                title="Recipes" 
                data-content="<div> <p> Time to to watch and learn how to cook some healthy nutrious meals from professional chefs </p> </div> <div id = 'close-tour' class='pull-left btn btn-fill btn-success btn-xs'> Finish tour</div> <div id = 'next-3' class='pull-right btn btn-primary btn-xs'> next tip</div> </br> </div></div> "> <!-- start of card -->
