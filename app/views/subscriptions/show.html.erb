            <div class="filter"></div>
    
            </div>
              <div class="content">
              <a href="#" class="pull-right">
    
                    <i class="icon-happy"></i>
    
                 </a>                          
    
            <a href="/blog"><br>
    
                <h4 class="title text-center">Reel Movement Blog</h4>
                <p class="text-center"> Learn more about health and fitness </p>
    
                
    
            </a>
    
            </div>
    

    
        

        </div> <!-- end card -->
        </div>

        <div class="col-md-4"> 
          <div id = "pop-3" class="card card-background tour-pop"
